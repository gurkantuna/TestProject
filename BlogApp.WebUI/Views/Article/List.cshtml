@model IEnumerable<Article>
@{
    ViewData["Title"] = "Operations";
}

<div class="container">
    <h2>Article List</h2>
    <hr />
    <a asp-action="Create" asp-controller="Article" class="btn btn-primary">Create Article</a>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Any()) {
                <table class="table table-bordered table-striped mt-3" id="tblArticle">
                    <thead>
                        <tr class="text-center">
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Is Approved</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var article in Model) {
                            <tr>
                                <td>@article.Id</td>
                                <td>
                                    <a asp-controller="Article" asp-action="Detail" asp-route-id="@article.Id" target="_blank">
                                        <img src="~/img/@article.ImageThumb" alt="@article.Title">
                                    </a>
                                </td>
                                <td>@article.Title</td>
                                <td>@article.Date</td>
                                <td>@article.Category?.Name</td>
                                <td class="text-center">
                                    @if (article.IsApproved) {
                                        <i class="fa fa-check text-success" aria-hidden="true"></i>
                                    }
                                    else {
                                        <i class="fa fa-times text-danger" aria-hidden="true"></i>
                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm fa fa-search" asp-controller="Article" asp-action="Detail" asp-route-id="@article.Id" target="_blank"></a>
                                    <a class="btn btn-dark btn-sm fa fa-pencil" asp-controller="Article" asp-action="Update" asp-route-id="@article.Id"></a>
                                    <a class="btn btn-danger btn-sm fa fa-remove btnDel" data-id="@article.Id" href="javascript:;"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else {
                <div class="alert alert-warning">There is no any article!</div>
            }
        </div>
    </div>
</div>
@section script{
    <script>
        $('#tblArticle').on('click', '.btnDel', function () {
            deleteObject('/article/delete', this);
        });
    </script>
}