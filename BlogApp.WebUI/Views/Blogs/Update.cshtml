@model Blog
@{
    ViewData["Title"] = "Update";
}

<div class="container">
    <h2>Update Blog</h2>
    <form asp-action="Update" asp-controller="Blogs" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Image" />

        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" maxlength="500"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="Body"></label>
            <textarea asp-for="Body" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <img src="~/img/@Model.ImageThumb" class="img-thumbnail border-dark mb-2" />
            <input type="file" name="file" id="file" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Category"></label>
            <select asp-for="CategoryId"
                    asp-items="ViewBag.Categories" class="form-control">
                <option value="-1" selected disabled>Select Category</option>
            </select>
        </div>

        <div class="form-group form-check">
            <input class="form-check-input" asp-for="IsApproved">
            <label class="form-check-label" asp-for="IsApproved">Is Approved</label>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-controller="Blogs" asp-action="List" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section script{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Body");
    </script>
}