@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<div class="container">
    <h2>Role List</h2>
    <hr />
    <a asp-action="Create" asp-controller="Role" class="btn btn-primary">Create Role</a>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Any()) {
                <table class="table table-bordered table-striped" id="tblRoles">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Users</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model) {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                <td identity-role="@role.Id"></td>
                                <td>
                                    <a class="btn btn-dark btn-sm fa fa-pencil" asp-controller="Role" asp-action="Update" asp-route-id="@role.Id"></a>
                                    <a class="btn btn-danger btn-sm fa fa-remove btnDel" data-id="@role.Id" href="javascript:;"></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else {
                <div class="alert alert-warning">There is no any role!</div>
            }
        </div>
    </div>
</div>
@section script{
    <script>
        $('#tblRoles').on('click', '.btnDel', function () {
            AjaxDelete('/Roles/Delete/', this);
        });
    </script>
}


